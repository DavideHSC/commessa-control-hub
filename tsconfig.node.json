{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/server",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@shared-types/*": ["./types/*"]
    }
  },
  "include": ["server/**/*.ts", "prisma/**/*.ts", "types/**/*.ts", "server/scripts/seed_anagrafica_template.cjs"],
  "exclude": ["node_modules", "src"]
}