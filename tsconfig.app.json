{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting - ABILITATO PER LA MASSIMA SICUREZZA */
    "strict": true,
    // "noUnusedLocals": false, // Queste opzioni sono ora controllate da "strict: true" o da ESLint
    // "noUnusedParameters": false,
    // "noImplicitAny": false,
    "noFallthroughCasesInSwitch": true, // Consigliato abilitarlo

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@shared-types/*": ["./types/*"]
    }
  },
  "include": ["src", "types"]
}